<% if @pi && @pi.total_amount.to_f > 0.0 -%>
	$("#thinking").replaceWith("<%= escape_javascript(render :partial => 'answer') %>");
<% else %>
  <% if @pi %>
	  $("#more_info_container").slideDown();
  	$("#more_info_list").append("<%= escape_javascript(render :partial => 'more_info') %>");
	<% elsif @category %>
    $("#wrong_dimension_container").slideDown();
		$("#wrong_dimension_list").append("<%= escape_javascript(render :partial => 'wrong_dimensions') %>");
	<% elsif @private == true %>
		$("#private_list").append("<%= escape_javascript(render :partial => 'private') %>");
	<% end %>
	$("#thinking").replaceWith("");
<% end %>

<% unless session[:categories].empty? %>
	$("#answerlist").append("<%= escape_javascript(render :partial => 'thinking') %>");
<% end %>
<% if session[:categories].empty? && session[:got_result].nil? %>
	$("#answerlist").append("<%= escape_javascript(render :partial => 'no_results') %>");
<% end %>
