<div class="row">
  <div class="span8">
    <h3>
      <% amount = @pi.amounts.find{|x| x[:default] == true}%>
      <%= number_with_precision amount[:value], :precision => 2, :delimiter => ',' %>
      <%= amount[:unit] %> of 
      <%= amount[:type] %>
    </h3>
  </div>
</div>
<div class="row">
  <div class="span6">
    <blockquote> 
      <p>
        based on 
		<%= @inputs.map { |input|
		  "'#{input[0].name.downcase}' being #{input[1].to_s}"
		}.join(', and ') %>
      </p>
      <p>
        using the item '<%= @item.label %>' 
      </p>
      <p>
        from the category 
        <%= link_to @category.meta.wikiname.gsub("_"," "), "http://discover.amee.com/categories/#{@category.meta.wikiname}" %>.
      </p>
    </blockquote>
  </div>
  <div class="span2 more-info-btn">
    <%= link_to "More info", 
                @more_info_url,
                :class => 'btn btn-primary' %>
  </div>
</div>