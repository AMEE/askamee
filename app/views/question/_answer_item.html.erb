<% if @pi -%>
  <dt>
    <%= @category.meta.wikiname.gsub("_"," ") %>
  </dt>
  <dd>
    <div class='tellmemore'><%= link_to "More info", "http://discover.amee.com/categories/#{@category.meta.wikiname}/data/#{@item.label.gsub(", ",'/')}/calculator" %></div>
    <% if @pi.total_amount.to_f > 0.0 %>
      <div class='amount'>
        = <%= @pi.total_amount %>kg
      </div>
    <% else %>
      <div>
        This category needs a bit more information to give you an answer. Click 'more info' to dig deeper.
      </div>
    <% end %>
    <div class='details'>
      <% if @pi.total_amount.to_f > 0.0 && @item && @ivd -%>
        Item <span class='item'>"<%= @item.label %>"</span>, input parameter <span class='inputname'>"<%= @ivd.name%>"</span><br/>
      <% end -%>
      Tags: <%= @category.meta.tags.map{|tag| "<a href='http://discover.amee.com/categories?tag=#{tag}'>#{tag}</a>" }.join(', ').html_safe %>
    </div>
  </dd>
<% end %>
<% unless session[:categories].empty? %>
  <%= render :partial => 'thinking'%>
<% end %>
